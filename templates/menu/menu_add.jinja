{% extends 'base.jinja' %}
{% block content %}
<h2 class="page_title">{{ title }}</h2>
<div class="button-outer">
<form action="/menu_add" method="post">

<label for="item_name">Item name:</label>
<input type="text" id="item_name" required name="item_name"> 

<label for="item_type">Item type:</label>
<select name="item_type" id="item_type" required name="item_type"> 
        <option value="None">None</option>
        <option value="Starter">Starter</option>
        <option value="Main">Main</option>
        <option value="Dessert">Dessert</option>
        <option value="Drink">Drink</option>
        <option value="Fruit">Fruit</option>     
        </select>

<label for="item_price">Item price: Â£</label>
<input type="text" style="width: 45px;" id="item_price" required name="item_price"> 

<label for="item_weight">Item weight: (grams)</label>
<input type="text" style="width: 45px;" id="item_weight" required name="item_weight"> 

<button class="button-small" type="submit">Add Item</button>
</form>
</div>

{% endblock %}