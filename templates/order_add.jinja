{% extends 'base.jinja' %}
{% block content %}
<h2>{{ title }}</h2>
<div>
<form action="/order_add" method="post">

<label for="customer_id">Customer</label>
<select name="customer_id" id="customer_id"> 
{% for customer in customers %}
    <option value="{{ customer.id }}">{{ customer.name }}</option>
{% endfor %}
</select>
<br>
<br>
<label for="order_date">Order Date:</label>
<input type="date" id="order_date" required name="order_date"> 
<br>
<br>

<label for="menu_item">Menu Item to add</label>
<select name="menu_item" id="menu_item"> 
{% for item in items %}
    <option value="{{ item.id }}">{{ item.item_name }} Â£{{ item.item_price }}</option>
{% endfor %}
</select>
<br>


<button type="submit">Add Order</button>
</form>
</div>
{% endblock %}